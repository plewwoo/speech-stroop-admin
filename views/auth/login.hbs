<div class="full-height d-flex justify-content-center align-items-center">
	<div class="card m-auto " style="width: 400px;">
		<div class="card-body">
			<form action="/login" method="POST" class="form_text">
				<h1 class="text-center">เข้าสู่ระบบ</h1>
				<p class="text-center mb-3">Speech Stroop Dashboard</p>
				{{#if msg}}
				<div class="alert alert-danger my-2" role="alert">
					{{msg}}
				</div>
				{{/if}}
				<div class="form-group">
					<label for="username">ชื่อผู้ใช้</label>
					<input type="text" class="form-control" name="username" placeholder="ชื่อผู้ใช้" required>
				</div>
				<div class="form-group">
					<label for="password">รหัสผ่าน</label>
					<input type="password" class="form-control" name="password" placeholder="รหัสผ่าน" required>
				</div>
				<hr>
				<div class="d-flex justify-content-end align-items-center">
					<button type="submit" class="btn btn-primary">เข้าสู่ระบบ</button>
				</div>
				
			</form>
		</div>
	</div>
</div>