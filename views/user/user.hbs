<nav aria-label="breadcrumb">
  <ol class="breadcrumb">
    <li class="breadcrumb-item"><a href="/">แดชบอร์ด</a></li>
    <li class="breadcrumb-item"><a href="/user">ผู้ใช้งานทั้งหมด</a></li>
    <li class="breadcrumb-item active">ผู้ใช้งาน</li>
  </ol>
</nav>
<div class="row">
	<div class="col-12 col-xl-12 mb-4 mb-lg-0">
		<div class="card">
			<div class="card-header d-flex justify-content-between align-items-center">
				<h5 class="m-0">ผู้ใช้งาน</h5>
			</div>
			<div class="card-body">
				<div class="container">
					<div class="main-body">
						<div class="row gutters-sm">
							<div class="col-md-4 mb-3">
								<div class="card h-100">
									<div class="card-body">
										<div
											class="d-flex flex-column justify-content-between align-items-center text-center">
											<img src="../assets/images/avartar_default.png" alt="default avatar"
												class="rounded-circle" width="150">
											<div class="mt-3">
												{{#each result}}
												<h4>{{username}}</h4>
												<p class="text-muted font-size-sm mb-1">อายุ {{yearsOld dateOfBirth
													'years'}} ปี</p>
												<p class="text-muted font-size-sm m-0">วันเกิด {{datetimeFormat
													dateOfBirth 'Do MMM YYYY'}}</p>
												{{/each}}
											</div>
										</div>
									</div>
								</div>
							</div>
							<div class="col-md-8">
								<div class="card mb-3">
									<div class="card-body">
										{{#each result}}
										<div class="row">
											<div class="col-sm-3">
												<h6 class="mb-0">ชื่อจริง</h6>
											</div>
											<div class="col-sm-9 text-secondary">
												{{name}} {{surname}}
											</div>
										</div>
										<hr>
										<div class="row">
											<div class="col-sm-3">
												<h6 class="mb-0">อีเมล</h6>
											</div>
											<div class="col-sm-9 text-secondary">
												{{email}}
											</div>
										</div>
										<hr>
										<div class="row">
											<div class="col-sm-3">
												<h6 class="mb-0">เบอร์โทรศัพท์</h6>
											</div>
											<div class="col-sm-9 text-secondary">
												{{tel}}
											</div>
										</div>
										<hr>
										<div class="row">
											<div class="col-sm-3">
												<h6 class="mb-0">วันที่สมัครสมาชิก</h6>
											</div>
											<div class="col-sm-9 text-secondary">
												{{datetimeFormat createdAt 'Do MMM YYYY, HH:mm:ss'}} น.
											</div>
										</div>
										<hr>
										{{/each}}
									</div>
								</div>
							</div>
							<div class="col-md-12 mb-3">
								<div class="card h-100">
									<div class="card-body">
										{{#each result}}
										<h6 class="d-flex align-items-center mb-3">คะแนนสุขภาพ</h6>
										<small>ความเครียด</small>
										<div class="progress mb-3" style="height: 15px">
											<div class="progress-bar progress-bar-striped progress-bar-animated"
												role="progressbar" style="width: {{stressPercent healthScores.stress}}%"
												aria-valuenow="{{healthScores.stress}}" aria-valuemin="0"
												aria-valuemax="50">
												{{healthScores.stress}}/50</div>
										</div>
										<small>การนอนหลับ</small>
										<div class="progress mb-3" style="height: 15px">
											<div class="progress-bar progress-bar-striped progress-bar-animated"
												role="progressbar" style="width: {{stressPercent healthScores.sleep}}%"
												aria-valuenow="{{healthScores.sleep}}" aria-valuemin="0"
												aria-valuemax="50">
												{{healthScores.sleep}}/50</div>
										</div>
										{{/each}}
									</div>
								</div>
							</div>
							<div class="col-md-12 mb-3">
								<div class="card h-100">
									<div class="card-body">
										<h6 class="d-flex align-items-center mb-3">ประวัติการทำแบบทดสอบ</h6>
										<table class="table">
											<thead>
												<tr>
													<th scope="col">#</th>
													<th scope="col">คะแนนรวม</th>
													<th scope="col">คะแนนส่วนที่ 1</th>
													<th scope="col">คะแนนส่วนที่ 2</th>
													<th scope="col">คะแนนส่วนที่ 3</th>
													<th scope="col">วันที่ทำแบบทดสอบ</th>
													<th></th>
												</tr>
											</thead>
											<tbody>
												{{#each result}}
												{{#if history}}
												{{#each history}}
												<tr>
													<th scope="row">{{inc @index 1}}</th>
													<td>{{totalScore}}</td>
													{{#each sections}}
													<td>{{finalScore score.congruent score.incongruent}}</td>
													{{/each}}
													<td>{{datetimeFormat createdAt 'l, HH:mm'}} น.</td>
													<td><a href="/history/{{_id}}" class="btn btn-sm btn-primary">รายละเอียด</a></td>
												</tr>
												{{/each}}
												{{else}}
												<tr>
													<th scope="row">{{inc @index 1}}</th>
													<td>-</td>
													<td>-</td>
													<td>-</td>
													<td>-</td>
													<td>-</td>
												</tr>
												{{/if}}
												{{/each}}
											</tbody>
										</table>
									</div>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>