<h1 class="h2 text-center mb-3">ผู้ใช้งาน</h1>
<div class="row">
	<div class="col-12 col-xl-12 mb-4 mb-lg-0">
		<div class="card">
			<div class="card-header d-flex justify-content-between align-items-center">
				<h5 class="m-0">ตารางแสดงผู้ใช้งาน</h5>
				<div>
					<button class="btn btn-outline-secondary btn-sm">JSON</button>
				</div>
			</div>
			<div class="card-body">
				<div class="table-responsive">
					<table class="table table-hover">
						<thead>
							<tr>
								<th scope="col">#</th>
								<th scope="col">ชื่อผู้ใช้</th>
								<th scope="col">ชื่อจริง</th>
								<th scope="col">อีเมล</th>
								<th scope="col">วันที่สมัครสมาชิก</th>
								<th></th>
							</tr>
						</thead>
						<tbody>
							{{#each result}}
							<tr>
								<th scope="row">{{inc @index 1}}</th>
								<td>{{username}}</td>
								<td>{{name}} {{surname}}</td>
								<td>{{email}}</td>
								<td>{{datetimeFormat createdAt 'Do MMM YYYY, HH:mm:ss'}} น.</td>
								<td><a href="/user/{{_id}}" class="btn btn-sm btn-primary">View</a></td>
							</tr>
							{{/each}}
						</tbody>
					</table>
				</div>
			</div>
		</div>
	</div>
</div>